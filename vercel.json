{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "crons": [
    {
      "path": "/api/deadline-reminders",
      "schedule": "0 8 * * *"
    }
  ],
  "rewrites": [
    { "source": "/api/project/:id/messages/read", "destination": "/api/project/[id]/messages/read" },
    { "source": "/api/project/:id/messages", "destination": "/api/project/[id]/messages" },
    { "source": "/api/project/:id/message", "destination": "/api/project/[id]/message" },
    { "source": "/api/project/:id/account", "destination": "/api/project/[id]/account" },
    { "source": "/api/project/:id/payments", "destination": "/api/project/[id]/payments" },
    { "source": "/api/project/:id/password-reset", "destination": "/api/project/[id]/password-reset" },
    { "source": "/api/project/:id/change-request", "destination": "/api/project/[id]/change-request" },
    { "source": "/api/project/:id", "destination": "/api/project/[id]/index" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://webstability.nl" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*).css",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/favicon.svg",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    }
  ]
}
