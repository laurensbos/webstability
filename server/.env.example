# ===========================================
# WEBSTABILITY SERVER CONFIGURATION
# ===========================================
# Kopieer dit bestand naar .env en vul de waarden in

# Server
NODE_ENV=development
PORT=3001

# Database
DATABASE_PATH=./data/webstability.db

# ===========================================
# EMAIL CONFIGURATIE (Hostinger SMTP)
# ===========================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@webstability.nl
SMTP_PASS=your_smtp_password_here

# Email adressen
EMAIL_FROM=info@webstability.nl
EMAIL_ADMIN=info@webstability.nl

# ===========================================
# MOLLIE BETALINGEN
# ===========================================
MOLLIE_API_KEY=your_mollie_api_key_here
MOLLIE_WEBHOOK_URL=https://webstability.nl/api/mollie-webhook

# ===========================================
# APPLICATIE URLs
# ===========================================
APP_URL=http://localhost:5173
API_URL=http://localhost:3001

# Productie URLs (uncomment voor live)
# APP_URL=https://webstability.nl
# API_URL=https://webstability.nl

# ===========================================
# BEVEILIGING
# ===========================================
# Admin dashboard wachtwoord (verander dit!)
ADMIN_PASSWORD=webstability2024!

# Magic link secret voor project tokens
MAGIC_LINK_SECRET=your_random_secret_here_min_32_chars

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_PATH=./logs
